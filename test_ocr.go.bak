package main

import (
	"fmt"
	"os"
)

func main() {
	fmt.Println("🔍 Testing OCR functionality...")

	// Test if Tesseract is available
	result, err := ocrWithTesseract("static/index.html") // Use any existing file as test
	if err != nil {
		fmt.Printf("❌ Tesseract test failed: %v\n", err)
		os.Exit(1)
	}

	fmt.Printf("✅ Tesseract is working! Engine: %s, Confidence: %.2f\n", result.Engine, result.Confidence)
	fmt.Printf("📄 Sample text (first 100 chars): %.100s\n", result.Text)

	// Test MRZ directory creation
	err = os.MkdirAll("static/mrz", 0755)
	if err != nil {
		fmt.Printf("❌ Could not create MRZ directory: %v\n", err)
		os.Exit(1)
	}

	fmt.Println("✅ MRZ directory created successfully")
	fmt.Println("🎉 OCR functionality is ready for testing!")
}
