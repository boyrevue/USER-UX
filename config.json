{
  "application": {
    "name": "CLIENT-UX Personal Data Manager",
    "version": "3.0",
    "description": "TTL-driven semantic web application with dynamic form generation",
    "architecture": "ttl-single-source-of-truth"
  },
  "server": {
    "port": 3000,
    "host": "localhost",
    "staticFiles": {
      "rootPath": "./static",
      "serveFromRoot": [
        "manifest.json",
        "favicon.ico", 
        "robots.txt",
        "logo192.png",
        "logo512.png",
        "asset-manifest.json"
      ],
      "serveFromStatic": [
        "js/*",
        "css/*"
      ],
      "mimeTypes": {
        ".css": "text/css",
        ".js": "application/javascript",
        ".png": "image/png",
        ".jpg": "image/jpeg",
        ".jpeg": "image/jpeg",
        ".svg": "image/svg+xml",
        ".ico": "image/x-icon",
        ".json": "application/json"
      }
    }
  },
  "frontend": {
    "framework": "React 18 + TypeScript",
    "styling": "Tailwind CSS + Flowbite",
    "icons": "Lucide React",
    "buildDirectory": "insurance-frontend/build",
    "serveDirectory": "static"
  },
  "backend": {
    "language": "Go 1.21+",
    "framework": "Gorilla Mux",
      "ontologyFiles": [
    "ontology/AI_Driver_Details.ttl",
    "ontology/AI_Vehicle_Details.ttl",
    "ontology/AI_Policy_Details.ttl",
    "ontology/AI_Claims_History.ttl",
    "ontology/AI_Insurance_Payments.ttl",
    "ontology/AI_Data_Compliance.ttl",
    "ontology/user_ux.ttl",
    "ontology/user_documents.ttl",
    "ontology/user_credentials_pci.ttl",
    "ontology/i18n_temporal.ttl",
    "ontology/personal_documents_ontology.ttl"
  ],
    "eliminatedFiles": [
      "ontology/categories.json - REMOVED (TTL doctrine compliance)",
      "ontology/fields.json - REMOVED (TTL doctrine compliance)",
      "ontology/subforms.json - REMOVED (TTL doctrine compliance)"
    ]
  },
  "features": {
    "ttlDynamicForms": true,
    "semanticWebCompliance": true,
    "multiLanguage": ["en", "de"],
    "documentProcessing": true,
    "ocrEngine": "tesseract+passporteye",
    "sessionManagement": true,
    "validation": "TTL-based",
    "ukConvictionCodes": 45
  },
  "startup": {
    "script": "./start.sh",
    "requirements": [
      "Node.js 16+",
      "Go 1.21+",
      "npm install in insurance-frontend/",
      "go mod tidy"
    ],
    "steps": [
      "Kill existing processes",
      "Build React frontend",
      "Copy build to static/",
      "Fix nested static/static/",
      "Build Go backend",
      "Start server"
    ]
  },
  "troubleshooting": {
    "commonIssues": {
      "blankScreen": "Check static file serving and nested directories",
      "404Errors": "Verify manifest.json and logo files are served from root",
      "sidebarMissing": "Ensure React build is copied to static/",
      "serverNotStarting": "Check Go compilation and port availability",
      "mimeTypeErrors": "Ensure proper MIME types are set for CSS/JS files"
    },
    "fileStructure": {
      "critical": [
        "static/index.html",
        "static/manifest.json", 
        "static/js/main.*.js",
        "static/css/main.*.css"
      ]
    },
    "mimeTypeFix": {
      "description": "Go server now sets proper MIME types for static files",
      "css": "text/css",
      "js": "application/javascript",
      "png": "image/png",
      "json": "application/json"
    }
  }
}
