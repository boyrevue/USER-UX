############################################################
## AI POLICY DETAILS ONTOLOGY MODULE
############################################################

autoins:PolicyDetailsModule a owl:Ontology ;
  rdfs:label "AI Policy Details Module" ;
  owl:versionInfo "v2.0.0-2025-01-24" ;
  dct:creator "CLIENT-UX" ;
  dct:description "Comprehensive insurance policy ontology covering coverage, limits, excesses, and terms" ;
  owl:imports autoins: ;
  # TOPIC-LEVEL GDPR COMPLIANCE
  autoins:dataClassification autoins:PersonalData ;
  autoins:personalDataCategory autoins:FinancialData ;
  autoins:accessLevel autoins:UserAccess ;
  autoins:consentRequired "true"^^xsd:boolean ;
  autoins:consentPurpose "Insurance policy configuration, pricing, and contract management" ;
  autoins:consentBasis autoins:Contract ;
  autoins:retentionPeriod "P10Y" ;
  autoins:retentionReason "Insurance contract lifecycle and regulatory compliance" ;
  autoins:auditRequired "true"^^xsd:boolean ;
  autoins:gdprCompliant "true"^^xsd:boolean .

############################################################
## POLICY DOCUMENT CLASSES
############################################################

# Policy Documents (from comprehensive ontology)
autoins:PolicyDocument a owl:Class ;
    rdfs:label "Policy Document" ;
    rdfs:comment "Insurance policy contracts and related documentation" ;
    rdfs:subClassOf autoins:InsuranceEntity .

autoins:PolicyWording a owl:Class ;
    rdfs:label "Policy Wording" ;
    rdfs:comment "Full policy terms and conditions document" ;
    rdfs:subClassOf autoins:PolicyDocument .

autoins:EndorsementDocument a owl:Class ;
    rdfs:label "Endorsement Document" ;
    rdfs:comment "Policy modification or endorsement" ;
    rdfs:subClassOf autoins:PolicyDocument .

autoins:CancellationNotice a owl:Class ;
    rdfs:label "Cancellation Notice" ;
    rdfs:comment "Policy cancellation notification" ;
    rdfs:subClassOf autoins:PolicyDocument .

autoins:InsuranceCertificate a owl:Class ;
    rdfs:label "Insurance Certificate" ;
    rdfs:comment "Official certificate of motor insurance coverage" ;
    rdfs:subClassOf autoins:MotorInsuranceDocument .

autoins:InsuranceSchedule a owl:Class ;
    rdfs:label "Insurance Schedule" ;
    rdfs:comment "Detailed schedule of coverage, limits, and terms" ;
    rdfs:subClassOf autoins:MotorInsuranceDocument .

############################################################
## CORE POLICY CLASSES
############################################################

autoins:InsurancePolicy a owl:Class ;
  rdfs:label "Insurance Policy" ;
  rdfs:comment "Complete insurance policy with all terms and conditions" .

autoins:PolicyConfiguration a owl:Class ;
  rdfs:label "Policy Configuration" ;
  rdfs:comment "Policy setup and configuration options" .

autoins:Coverage a owl:Class ;
  rdfs:label "Coverage" ;
  rdfs:comment "Insurance coverage type and limits" .

autoins:CoverageBenefit a owl:Class ;
  rdfs:label "Coverage Benefit" ;
  rdfs:comment "Specific benefit provided by coverage" .

autoins:Limit a owl:Class ;
  rdfs:label "Limit" ;
  rdfs:comment "Coverage limit or maximum payout" .

autoins:Excess a owl:Class ;
  rdfs:label "Excess" ;
  rdfs:comment "Policy excess (deductible) amount" .

autoins:Exclusion a owl:Class ;
  rdfs:label "Exclusion" ;
  rdfs:comment "Policy exclusion or limitation" .

autoins:Endorsement a owl:Class ;
  rdfs:label "Endorsement" ;
  rdfs:comment "Policy modification or addition" .

autoins:NoClaimsDiscount a owl:Class ;
  rdfs:label "No Claims Discount" ;
  rdfs:comment "No claims discount details" .

############################################################
## POLICY OBJECT PROPERTIES
############################################################

autoins:hasPolicy a owl:ObjectProperty ;
  rdfs:domain autoins:QuoteRequest ;
  rdfs:range autoins:InsurancePolicy ;
  rdfs:label "has policy" ;
  autoins:isRequired "true"^^xsd:boolean ;
  rdfs:comment "Links to insurance policy" .

############################################################
## BASIC POLICY PROPERTIES
############################################################

autoins:coverType a owl:DatatypeProperty ;
  rdfs:domain autoins:InsurancePolicy ;
  rdfs:range xsd:string ;
  rdfs:label "cover type" ;
  autoins:isRequired "true"^^xsd:boolean ;
  autoins:enumerationValues ("Third Party" "Third Party Fire & Theft" "Comprehensive") ;
  autoins:formHelpText "Level of insurance coverage required" .

autoins:startDate a owl:DatatypeProperty ;
  rdfs:domain autoins:InsurancePolicy ;
  rdfs:range xsd:date ;
  rdfs:label "start date" ;
  autoins:isRequired "true"^^xsd:boolean ;
  autoins:formHelpText "Date when insurance coverage should start" .

autoins:endDate a owl:DatatypeProperty ;
  rdfs:domain autoins:InsurancePolicy ;
  rdfs:range xsd:date ;
  rdfs:label "end date" ;
  autoins:isRequired "false"^^xsd:boolean ;
  autoins:formHelpText "Date when insurance coverage ends" .

autoins:policyTerm a owl:DatatypeProperty ;
  rdfs:domain autoins:InsurancePolicy ;
  rdfs:range xsd:string ;
  rdfs:label "policy term" ;
  autoins:isRequired "true"^^xsd:boolean ;
  autoins:enumerationValues ("12 Months" "6 Months" "3 Months" "1 Month" "Temporary") ;
  autoins:formHelpText "Duration of the insurance policy" .

autoins:renewalType a owl:DatatypeProperty ;
  rdfs:domain autoins:InsurancePolicy ;
  rdfs:range xsd:string ;
  rdfs:label "renewal type" ;
  autoins:isRequired "false"^^xsd:boolean ;
  autoins:enumerationValues ("Auto Renewal" "Manual Renewal" "No Renewal") ;
  autoins:formHelpText "How the policy should renew" .

