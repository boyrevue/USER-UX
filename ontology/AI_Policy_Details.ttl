############################################################
## SHACL VALIDATION SHAPES FOR POLICIES
############################################################

autoins:PolicyShape a sh:NodeShape ;
  sh:targetClass autoins:InsurancePolicy ;
  rdfs:label "Policy Validation Shape" ;
  sh:property [
    sh:path autoins:coverType ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:in ("Third Party" "Third Party Fire & Theft" "Comprehensive") ;
    sh:message "Cover type must be selected from valid options"
  ] ;
  sh:property [
    sh:path autoins:startDate ;
    sh:datatype xsd:date ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:message "Policy start date is required"
  ] ;
  sh:property [
    sh:path autoins:voluntaryExcess ;
    sh:datatype xsd:decimal ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minInclusive 0 ;
    sh:maxInclusive 1000 ;
    sh:message "Voluntary excess must be between £0 and £1000"
  ] ;
  sh:property [
    sh:path autoins:ncdYears ;
    sh:datatype xsd:integer ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minInclusive 0 ;
    sh:maxInclusive 15 ;
    sh:message "NCD years must be between 0 and 15"
  ] .

