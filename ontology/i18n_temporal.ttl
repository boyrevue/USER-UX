# Internationalization Temporal Ontology
# ISO 639-1 Language Codes and ISO 8601 Date/Time Standards

# Base Classes
:TemporalUnit a rdfs:Class ;
    rdfs:label "Temporal Unit"@en ;
    rdfs:label "Zeiteinheit"@de ;
    rdfs:comment "Base class for temporal units like months and days" .

:Month a rdfs:Class ;
    rdfs:subClassOf :TemporalUnit ;
    rdfs:label "Month"@en ;
    rdfs:label "Monat"@de ;
    rdfs:comment "Calendar month with multilingual support" .

:DayOfWeek a rdfs:Class ;
    rdfs:subClassOf :TemporalUnit ;
    rdfs:label "Day of Week"@en ;
    rdfs:label "Wochentag"@de ;
    rdfs:comment "Day of the week with multilingual support" .

# Properties
:monthNumber a rdf:Property ;
    rdfs:label "Month Number"@en ;
    rdfs:label "Monatsnummer"@de ;
    rdfs:domain :Month ;
    rdfs:range xsd:integer ;
    rdfs:comment "ISO month number (1-12)" .

:dayNumber a rdf:Property ;
    rdfs:label "Day Number"@en ;
    rdfs:label "Tagesnummer"@de ;
    rdfs:domain :DayOfWeek ;
    rdfs:range xsd:integer ;
    rdfs:comment "ISO day number (1=Monday, 7=Sunday)" .

:abbreviation3 a rdf:Property ;
    rdfs:label "3-Letter Abbreviation"@en ;
    rdfs:label "3-Buchstaben-Abkürzung"@de ;
    rdfs:comment "Standard 3-letter abbreviation" .

:abbreviation2 a rdf:Property ;
    rdfs:label "2-Letter Abbreviation"@en ;
    rdfs:label "2-Buchstaben-Abkürzung"@de ;
    rdfs:comment "Standard 2-letter abbreviation" .

:languageCode a rdf:Property ;
    rdfs:label "Language Code"@en ;
    rdfs:label "Sprachcode"@de ;
    rdfs:comment "ISO 639-1 language code" .

