  sec:encryptionRequired "true"^^xsd:boolean ;
  sec:encryptionAlgorithm "AES-256-GCM" .

creds:cardSecurityAnswer a owl:DatatypeProperty ;
  rdfs:domain creds:CreditCardCredential ;
  rdfs:range xsd:string ;
  rdfs:label "security answer" ;
  creds:isRequired "false"^^xsd:boolean ;
  creds:formHelpText "Answer to security question" ;
  creds:inputType "password" ;
  creds:helpPrompt "Enter the answer to your security question." ;
  sec:encryptionRequired "true"^^xsd:boolean ;
  sec:encryptionAlgorithm "AES-256-GCM" .

# SECURITY & COMPLIANCE PROPERTIES
sec:encryptionRequired a owl:DatatypeProperty ;
  rdfs:domain creds:Credential ;
  rdfs:range xsd:boolean ;
  rdfs:label "encryption required" ;
  sec:defaultValue "true"^^xsd:boolean .

sec:pciCompliant a owl:DatatypeProperty ;
  rdfs:domain creds:Credential ;
  rdfs:range xsd:boolean ;
  rdfs:label "PCI compliant" ;
  sec:defaultValue "true"^^xsd:boolean .

sec:storageType a owl:DatatypeProperty ;
  rdfs:domain creds:Credential ;
  rdfs:range xsd:string ;
  rdfs:label "storage type" ;
  sec:enumerationValues ("encrypted" "hashed" "tokenized" "vault") ;
  sec:defaultValue "encrypted" .

sec:accessLogging a owl:DatatypeProperty ;
  rdfs:domain creds:Credential ;
  rdfs:range xsd:string ;
  rdfs:label "access logging" ;
  sec:enumerationValues ("required" "optional" "none") ;
  sec:defaultValue "required" .

sec:sessionTimeout a owl:DatatypeProperty ;
  rdfs:domain creds:Credential ;
  rdfs:range xsd:string ;
  rdfs:label "session timeout" ;
  sec:defaultValue "15 minutes" .

sec:requires2FA a owl:DatatypeProperty ;
  rdfs:domain creds:Credential ;
  rdfs:range xsd:boolean ;
  rdfs:label "requires 2FA" ;
  sec:defaultValue "false"^^xsd:boolean .

sec:encryptionAlgorithm a owl:DatatypeProperty ;
  rdfs:domain creds:Credential ;
  rdfs:range xsd:string ;
  rdfs:label "encryption algorithm" ;
  sec:enumerationValues ("AES-256-GCM" "AES-256-CBC" "ChaCha20-Poly1305") ;
  sec:defaultValue "AES-256-GCM" .

sec:keyDerivation a owl:DatatypeProperty ;
  rdfs:domain creds:Credential ;
  rdfs:range xsd:string ;
  rdfs:label "key derivation" ;
  sec:enumerationValues ("PBKDF2" "Argon2" "bcrypt") ;
  sec:defaultValue "PBKDF2" .

############################################################
## END OF PCI-COMPLIANT CREDENTIALS ONTOLOGY
