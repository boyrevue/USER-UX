  creds:helpPrompt "Enter your online account password for your credit card." ;
  sec:encryptionRequired "true"^^xsd:boolean ;
  sec:encryptionAlgorithm "AES-256-GCM" ;
  sec:keyDerivation "PBKDF2" .

creds:cardSecurityQuestion a owl:DatatypeProperty ;
  rdfs:domain creds:CreditCardCredential ;
  rdfs:range xsd:string ;
  rdfs:label "security question" ;
  creds:isRequired "false"^^xsd:boolean ;
  creds:formHelpText "Security question for additional verification" ;
