  creds:helpPrompt "Select your credit card provider or issuing bank." ;
  sec:encryptionRequired "false"^^xsd:boolean .

creds:cardUsername a owl:DatatypeProperty ;
  rdfs:domain creds:CreditCardCredential ;
  rdfs:range xsd:string ;
  rdfs:label "card username" ;
  creds:isRequired "true"^^xsd:boolean ;
  creds:formHelpText "Online account username" ;
  creds:helpPrompt "Enter your online account username for your credit card." ;
  sec:encryptionRequired "true"^^xsd:boolean ;
  sec:encryptionAlgorithm "AES-256-GCM" .

creds:cardPassword a owl:DatatypeProperty ;
  rdfs:domain creds:CreditCardCredential ;
  rdfs:range xsd:string ;
  rdfs:label "card password" ;
  creds:isRequired "true"^^xsd:boolean ;
  creds:formHelpText "Online account password" ;
